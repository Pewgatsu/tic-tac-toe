{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-use-before-define": [
      "error",
      {
        "functions": true,
        "classes": true,
        "variables": false,
        "allowNamedExports": false
      }
    ]
  }
}
